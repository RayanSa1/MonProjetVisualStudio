<Window x:Class="AdminApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin login" Height="223" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Gebruikersnaam" Margin="0,0,0,5"/>
        <TextBox Name="UsernameBox" />

        <TextBlock Text="Wachtwoord" Margin="0,10,0,5"/>
        <PasswordBox Name="PasswordBox" />

        <Button Content="Inloggen" Click="Login_Click" Margin="0,20,0,0"/>
        <TextBlock Name="ErrorText" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
