<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminApp" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Menu vertical -->
        <StackPanel DockPanel.Dock="Left" Width="150" Background="LightGray">
            <Button Content="Dashboard" Click="Dashboard_Click" Margin="5"/>
            <Button Content="Bedrijven" Click="Bedrijven_Click" Margin="5"/>
        </StackPanel>

        <!-- Zone de contenu -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
